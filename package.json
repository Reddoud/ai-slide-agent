{
  "name": "ai-slide-agent",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade AI-powered slide generation platform for consultants",
  "scripts": {
    "dev": "pnpm --filter \"./apps/**\" --parallel dev",
    "dev:all": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter \"./packages/**\" build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "setup": "./setup.sh",
    "diagnose": "./diagnose.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
